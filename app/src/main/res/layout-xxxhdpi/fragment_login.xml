<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment">

    <com.huawei.hms.support.hwid.ui.HuaweiIdAuthButton
        android:id="@+id/huaweiIdAuthorizationButton"
        android:layout_width="243dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/continuewithhuawei"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="197dp"
        android:layout_height="216dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="97dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/huawei" />

    <Button
        android:id="@+id/account_signInCode"
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/huawei"
        android:drawableLeft="@drawable/hwid_auth_button_round_white"
        android:text="@string/revokeAccess"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/huaweiIdAuthorizationButton" />

    <Button
        android:id="@+id/account_silent_signin"
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/huawei"
        android:drawableLeft="@drawable/hwid_auth_button_round_white"
        android:text="@string/silent_sign_in"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_signout" />

    <Button
        android:id="@+id/account_signout"
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/huawei"
        android:drawableLeft="@drawable/hwid_auth_button_round_white"
        android:text="@string/sign_out"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_authorization" />

    <Button
        android:id="@+id/cancel_authorization"
        style="@style/ButtonStyle"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/huawei"
        android:drawableLeft="@drawable/hwid_auth_button_round_white"
        android:text="@string/cancel_authorization"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_signInCode" />
</androidx.constraintlayout.widget.ConstraintLayout>